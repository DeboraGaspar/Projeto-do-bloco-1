package org.generation.brazil;

import java.util.Scanner;

public class Opcionais {
	
public void EscolherOpcoes {
		
		Scanner sc = new Scanner(System.in);
		
		int opcionais = 0, quant1 = 0, quant2 = 0, totalop = 0;
		
		do {
		System.out.println(" =========OPCIONAIS=========");
		System.out.println(" =====ESCOLHA UMA OPÇÃO=====");
		System.out.println();
		
		System.out.println("1. Borda recheada");
		System.out.println("2. Catupiry Extra");
		System.out.println("=============================");
		
		opcionais = sc.nextInt();
		
		switch(opcionais) {
		case 1:
			System.out.println("Você escolheu borda recheada! \nDigite um número para continuar.");
			quant1 = sc.nextInt();
		break;
		case 2:
			System.out.println("Você escolheu catupiry extra! \nDigite um número para continuar");
			quant2 = sc.nextInt();
		break;
		default:
			System.out.println("Opção inválida!");
		}
		
		totalop = quant1 + quant2;
		
		
		System.out.println("Deseja outra opcional? [s,n]-->");
		}
		while(sc.next().equals("s".toLowerCase()));	

		System.out.println("Você escolheu " + totalop + " opcional");
		
		sc.close();
	}

}
